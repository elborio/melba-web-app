{% extends 'base_no_nav.html.twig' %}

{% block body %}

    <style>
        body {
            padding-top: 0;
        !important
        }
    </style>

    <div class="row login">

        <div class="container">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="col-sm-12">
                <div class="form">
                    <h2>Login to see Melba</h2>
                    <p>Fill in the form below</p>
                    {% for flash_message in app.session.flashBag.get('notice') %}
                        <div class="flash-message">
                            <p>{{ flash_message }} </p>

                        </div>
                    {% endfor %}

                    <form action="{{ path('login') }}" method="post">
                        <div class="mui-textfield mui-textfield--float-label">
                            <label for="username">Username:</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}"/>
                        </div>
                        <div class="mui-textfield mui-textfield--float-label formlast">
                            <label for="password">Password:</label>
                            <input type="password" id="password" name="_password"/><br/>
                        </div>
                        <button type="submit">Login</button>
                    </form>

                    <p><a href="/register">Or click here to create a new account</a></p>

                </div>
            </div>

        </div>

    </div>

{% endblock %}